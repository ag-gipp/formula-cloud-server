###
# Calculate the sum of the document length (or in other words,
# the length of the entire dataset (must be long))
GET localhost:9200/arqmath-data/_search
Content-Type: application/json

{
  "query": {
    "bool": {
      "must": [
        {
          "nested": {
            "path": "moi",
            "query": {
              "exists": {
                "field": "moi.moiMD5"
              }
            }
          }
        }
      ]
    }
  },
  "size": 0,
  "aggs": {
    "moi": {
      "nested": {
        "path": "moi"
      },
      "aggs": {
        "totaltf": {
          "sum": {
            "field": "moi.localTermFrequency"
          }
        }
      }
    }
  }
}

